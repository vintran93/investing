<h3> Portfolio: <%= display_portfolio(@currency) %></h3>

  
  <h1> Currency: <%= link_to @currency.name, currency_path(@currency) %></h1>
  <h1> Price per: $ <%= link_to (@currency.price_per), currency_path(@currency) %></h1>
  <h1> Amount Owned: <%= link_to @currency.amount_owned, currency_path(@currency) %></h1>
  <h1> Total: <%= link_to number_to_currency(@currency.price_per * @currency.amount_owned), currency_path(@currency) %></h1>

<div>
  <div class="panel-footer"></div>
  <%= link_to 'Edit', edit_currency_path(@currency) %> |
  <%= link_to 'Back', currencies_path %> |
  <%= link_to 'Delete', currency_path(@currency), method: :delete, data: { confirm: 'Are you sure?' } %>
</div>

<br>
<br>

<%= link_to 'New Currency', new_currency_path, class: "btn btn-default" %>
